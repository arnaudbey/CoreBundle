
{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'users' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block section_content %}
    <div id="users-panel" class="panel panel-default" ng-app="AdministrationModule">
        <div ui-view>
        </div>
    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('vendor/angular/angular-ui.css')}}"> </link>
    {# we should be able to remove the following line if it's included in angular-ui.css #}
    <link rel="stylesheet" href="{{ asset('bundles/clarolinecore/css/common/select.css') }}"></link>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('vendor/angular.js')}}"> </script>
    <script type="text/javascript" src="{{ asset('vendor/angular-ui.js')}}"> </script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/angular/services/api.services.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/angular-ui-translation/angular-translation.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/angular-bootstrap/ui-bootstrap-tpls.js') }}"> </script>

    {# Set some vars needed by Angular parts #}
    <script type="text/javascript">
        {# Make Twig variables accessibles by AngularJS #}

        var AngularApp = {};
        AngularApp.webDir = "{{ asset('') }}";
    </script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/angular/search/generic/search.app.js') }}></script>

    {# main #}
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/main/module.js') }}></script> 

    {# users #}
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/users/module.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/users/Controller/UserController.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/users/Directive/UserActionsDirective.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/users/Directive/UserListDirective.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/users/Directive/UserSearchDirective.js') }}></script>

    {# groups #}
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/modules.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Controller/GroupController.js') }}></script>    
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Controller/CreateModalController.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Controller/EditModalController.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Controller/UserListController.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Directive/GroupListDirective.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Directive/GroupSearchDirective.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Directive/GroupActionsDirective.js') }}></script>
    <script type="text/javascript" src={{ asset('bundles/clarolinecore/js/administration/groups/Service/GroupAPIService.js') }}></script>
{% endblock %}
